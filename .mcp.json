{
  "mcpServers": {
    "hot-reload": {
      "command": "npx",
      "args": [
        "mcp-reloader"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "echo-with-reload": {
      "command": "npx",
      "args": [
        "mcp-reloader",
        "--include", "examples/echo-server/config.json",
        "--",
        "node",
        "examples/echo-server/server.js"
      ]
    }
  }
}